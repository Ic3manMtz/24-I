<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:id="@+id/main" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".MainActivity" android:background="#17202A">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/primeraGuiaVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/segundaGuiaVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/terceraGuiaVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/primeraGuiaHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/segundaGuiaHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.44"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/terceraGuiaHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.58"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cuartaGuiaHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.72"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/quintaGuiaHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.86"/>

    <EditText
        android:id="@+id/resultEditText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="40sp"
        android:background="#D0D3D4"
        android:gravity="bottom|end"
        android:textAlignment="viewEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/primeraGuiaHorizontal" />


    <!--  Los botones primer renglon   -->
    <Button
        android:id="@+id/botonAC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:text="AC"
        app:layout_constraintBottom_toTopOf="@+id/segundaGuiaHorizontal"
        app:layout_constraintEnd_toStartOf="@+id/primeraGuiaVertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resultEditText"/>
    <Button
        android:id="@+id/botonParentesis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="( )"
        app:layout_constraintStart_toStartOf="@+id/primeraGuiaVertical"
        app:layout_constraintEnd_toStartOf="@+id/segundaGuiaVertical"
        app:layout_constraintTop_toBottomOf="@id/resultEditText"
        app:layout_constraintBottom_toTopOf="@+id/segundaGuiaHorizontal"/>
    <Button
        android:id="@+id/botonPorcentaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="%"
        app:layout_constraintStart_toStartOf="@+id/segundaGuiaVertical"
        app:layout_constraintEnd_toStartOf="@+id/terceraGuiaVertical"
        app:layout_constraintTop_toBottomOf="@id/resultEditText"
        app:layout_constraintBottom_toTopOf="@+id/segundaGuiaHorizontal"/>
    <Button
        android:id="@+id/botonDivision"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="/"
        app:layout_constraintStart_toStartOf="@+id/terceraGuiaVertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resultEditText"
        app:layout_constraintBottom_toTopOf="@+id/segundaGuiaHorizontal"/>

    <!--  Los botones del segundo renglon   -->
    <Button
        android:id="@+id/boton7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#414040"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@+id/terceraGuiaHorizontal"
        app:layout_constraintEnd_toStartOf="@+id/primeraGuiaVertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonAC"/>
    <Button
        android:id="@+id/boton8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#414040"
        android:text="8"
        app:layout_constraintStart_toStartOf="@+id/primeraGuiaVertical"
        app:layout_constraintEnd_toStartOf="@+id/segundaGuiaVertical"
        app:layout_constraintTop_toBottomOf="@+id/botonParentesis"
        app:layout_constraintBottom_toTopOf="@+id/terceraGuiaHorizontal"/>
    <Button
        android:id="@+id/boton9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#414040"
        android:text="9"
        app:layout_constraintStart_toStartOf="@+id/segundaGuiaVertical"
        app:layout_constraintEnd_toStartOf="@+id/terceraGuiaVertical"
        app:layout_constraintTop_toBottomOf="@+id/botonPorcentaje"
        app:layout_constraintBottom_toTopOf="@+id/terceraGuiaHorizontal"/>
    <Button
        android:id="@+id/botonMultiplicacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="X"
        app:layout_constraintStart_toStartOf="@+id/terceraGuiaVertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonDivision"
        app:layout_constraintBottom_toTopOf="@+id/terceraGuiaHorizontal"/>

    <!--  Los botones del tercer renglon   -->
    <Button
        android:id="@+id/boton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#414040"
        android:text="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/primeraGuiaVertical"
        app:layout_constraintTop_toBottomOf="@+id/boton7"
        app:layout_constraintBottom_toTopOf="@+id/cuartaGuiaHorizontal"/>
    <Button
        android:id="@+id/boton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#414040"
        android:text="5"
        app:layout_constraintStart_toStartOf="@+id/primeraGuiaVertical"
        app:layout_constraintEnd_toStartOf="@+id/segundaGuiaVertical"
        app:layout_constraintTop_toBottomOf="@+id/boton8"
        app:layout_constraintBottom_toTopOf="@+id/cuartaGuiaHorizontal"/>
    <Button
        android:id="@+id/boton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#414040"
        android:text="6"
        app:layout_constraintStart_toStartOf="@+id/segundaGuiaVertical"
        app:layout_constraintEnd_toStartOf="@+id/terceraGuiaVertical"
        app:layout_constraintTop_toBottomOf="@+id/boton9"
        app:layout_constraintBottom_toTopOf="@+id/cuartaGuiaHorizontal"/>
    <Button
        android:id="@+id/botonResta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="-"
        app:layout_constraintStart_toStartOf="@+id/terceraGuiaVertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonMultiplicacion"
        app:layout_constraintBottom_toTopOf="@+id/cuartaGuiaHorizontal"/>

    <!--  Los botones del cuarto renglon   -->
    <Button
        android:id="@+id/boton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#414040"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/primeraGuiaVertical"
        app:layout_constraintTop_toBottomOf="@+id/boton4"
        app:layout_constraintBottom_toTopOf="@+id/quintaGuiaHorizontal"/>
    <Button
        android:id="@+id/boton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#414040"
        android:text="2"
        app:layout_constraintStart_toStartOf="@+id/primeraGuiaVertical"
        app:layout_constraintEnd_toStartOf="@+id/segundaGuiaVertical"
        app:layout_constraintTop_toBottomOf="@+id/boton5"
        app:layout_constraintBottom_toTopOf="@+id/quintaGuiaHorizontal"/>
    <Button
        android:id="@+id/boton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#414040"
        android:text="3"
        app:layout_constraintStart_toStartOf="@+id/segundaGuiaVertical"
        app:layout_constraintEnd_toStartOf="@+id/terceraGuiaVertical"
        app:layout_constraintTop_toBottomOf="@+id/boton6"
        app:layout_constraintBottom_toTopOf="@+id/quintaGuiaHorizontal"/>
    <Button
        android:id="@+id/botonSuma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="+"
        app:layout_constraintStart_toStartOf="@+id/terceraGuiaVertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonResta"
        app:layout_constraintBottom_toTopOf="@+id/quintaGuiaHorizontal"/>

    <!--  Los botones del quinto renglon   -->
    <Button
        android:id="@+id/boton0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#414040"
        android:text="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/primeraGuiaVertical"
        app:layout_constraintTop_toBottomOf="@+id/boton1"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/botonPunto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#414040"
        android:text="."
        app:layout_constraintStart_toStartOf="@+id/primeraGuiaVertical"
        app:layout_constraintEnd_toStartOf="@+id/segundaGuiaVertical"
        app:layout_constraintTop_toBottomOf="@+id/boton2"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/botonD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#414040"
        android:text="D"
        app:layout_constraintStart_toStartOf="@+id/segundaGuiaVertical"
        app:layout_constraintEnd_toStartOf="@+id/terceraGuiaVertical"
        app:layout_constraintTop_toBottomOf="@+id/boton3"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:id="@+id/botonIgual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#2196F3"
        android:text="="
        app:layout_constraintStart_toStartOf="@+id/terceraGuiaVertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonSuma"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>